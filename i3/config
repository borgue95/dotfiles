# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ntilde resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 2 ppt
        bindsym Down resize grow height 5 px or 2 ppt
        bindsym Up resize shrink height 5 px or 2 ppt
        bindsym Right resize grow width 5 px or 2 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Window colors
#                        border              background          text                  indicator
client.focused           $bg_color           $bg-color           $text-color           $indicator
client.unfocused         $inactive-bg-color  $inactive-bg-color  $inactive-text-color  $indicator
client.focused_inactive  $inactive-bg-color  $inactive-bg-color  $inactive-text-color  $indicator
client.urgent            $urgent-color       $urgent-bg-color    $text-color           $indicator

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position bottom
    status_command i3blocks -c $CONFIGS/i3blocks.conf
    tray_output $monitor1
    font pango:DejaVu Sans Mono, FontAwesome 11
    colors{
        background $bg-color
        separator  $bbbeb3
        #                  border             background         text
        active_workspace   $inactive-bg-color $inactive-bg-color $inactive-text-color
        focused_workspace  $bg-color          $bg-color          $text-color
        inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
        urgent_workspace   $uregnt-bg-color   $urgent-bg-color   $text-color
    }
}

